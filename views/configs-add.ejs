<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%- include('_head', { title: 'add config' }) %>
</head>
<body>
    <%- include('_nav') %>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="/admin/configs/add" method="post">
                  <div class="form-group">
                    <label>site name</label>
                    <input type="text" name="siteName" class="form-control" placeholder="name" value="<%= configs.siteName %>">
                  </div>
                  <div class="form-group">
                    <label>site nav</label>
                    <textarea name="siteNav" class="form-control"><%= configs.siteNav %></textarea>
                  </div>
                  <div class="form-group">
                    <label>site meta</label>
                    <input type="text" name="siteMeta" class="form-control" placeholder="site meta" value="<%= configs.siteMeta %>">
                  </div>
                  <div class="form-group">
                    <label>site desc</label>
                    <textarea name="siteDesc" class="form-control"><%= configs.siteDesc %></textarea>
                  </div>
                  <div class="form-group">
                    <label>meta</label>
                    <textarea name="meta" class="form-control"><%= configs.meta %></textarea>
                  </div>
                  <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('_footer') %>
</body>
</html>