<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%- include('_head', { title: 'add article'}) %>
</head>
<body>
    <%- include('_nav') %>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="/admin/articles/edit" method="post">
                  <div class="form-group">
                    <label>Title</label>
                    <input type="hidden" name="id" value="<%= article.id %>">
                    <input type="text" name="title" class="form-control" placeholder="Title" value="<%= article.title %>">
                  </div>
                  <div class="form-group">
                    <label>Thread</label>
                    <select name="threadId" class="form-control">
                      <% threads.forEach(function(thread) {%>
                        <option value="<%= thread.id %>"><%= thread.name %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label>Meta</label>
                    <textarea name="meta" class="form-control"><%= article.meta %></textarea>
                  </div>
                  <div class="form-group">
                    <label>Content</label>
                    <textarea id="content" name="content"><%= article.content %></textarea>
                  </div>
                  <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('_footer') %>
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script>tinymce.init({ selector:'#content' });</script>
</body>
</html>